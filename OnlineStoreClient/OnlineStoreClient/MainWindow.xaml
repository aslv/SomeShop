<Window x:Class="OnlineStoreClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="512.917" Width="970.417">
    <Grid HorizontalAlignment="Left" Width="960">
        <StackPanel x:Name="loginFrm" HorizontalAlignment="Left" Height="218" Margin="273,160,0,0" VerticalAlignment="Top" Width="386">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFAAA6A6" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBox x:Name="nickName" Height="51" TextWrapping="Wrap" Text="name" Margin="15,15,15,0"/>
            <TextBox x:Name="password" Height="51" TextWrapping="Wrap" Text="password" Margin="15,15,15,0"/>
            <Button x:Name="logIn" Content="Button" Height="63" Click="logIn_Click" Margin="15,15,15,0"/>
        </StackPanel>
    </Grid>
</Window>
